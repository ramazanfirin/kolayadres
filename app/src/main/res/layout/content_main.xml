<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="409dp"
        android:layout_height="673dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:text="Ilce"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/ilceSpinner"
            android:popupBackground="@android:color/holo_green_dark"
            />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView2"
                android:text="Mahalle"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/mahalleSpinner"
                android:popupBackground="@android:color/holo_green_dark" >
            </Spinner>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <TextView
                android:id="@+id/textView3"
                android:text="Sokak"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/sokakSpinner"
                android:popupBackground="@android:color/holo_green_dark" >
            </Spinner>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/textView4"
                android:text="Bina/Kapi No"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/binaSpinner"
                android:popupBackground="@android:color/holo_green_dark" >
            </Spinner>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <Button
                android:id="@+id/buttonGoster"
                android:text="GÃ¶ster"
                android:textAppearance="?android:attr/textAppearanceLarge" />



        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>